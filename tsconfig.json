{
	"compilerOptions": {
		"lib": ["ES2020"],
		"module": "commonjs",
		"target": "ES2020",
		"outDir": "./dist",
		"rootDir": "./src",
		"importHelpers": true,
		"strict": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["./src/**/*"]
}