{
	"env": {
		"commonjs": true,
		"es2021": true,
		"node": true,
		"browser": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 12
	},
	"plugins": [
		"@typescript-eslint"
	],
	"rules": {
		"indent": ["error", "tab", { "SwitchCase": 1 }],
		"quotes": ["error", "double"],
		"semi": ["error", "always"],
		"no-extra-semi": "error",
		"space-before-function-paren": ["error", {
			"anonymous": "always",
			"named": "never",
			"asyncArrow": "always"
		}],
		"eqeqeq": "error",
		"no-duplicate-imports": "error",
		"no-const-assign": "error",
		"no-var": "error",
		"no-this-before-super": "error",
		"no-unreachable": "error",
		"no-non-null-assertion": true
	},
	"ignorePatterns": "dist/*"
}
